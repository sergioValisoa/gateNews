{% set menu_post        = true %}
{{ include('admin/layout/header.html.twig') }}
<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">

<!-- Navbar nampidirina -->
{{ include('admin/layout/nav-bar.html.twig') }}

<!-- aside nampidirina -->
{{ include('admin/layout/aside-bar.html.twig') }}

  <div class="content-wrapper">
            
    <section class="content">
      <div class="container-fluid">
         <div class="row">
           <div class="col-lg-12">
             <div class="card card-pink mt-3">
              <div class="card-header">
                <h2 class="card-title">Modification de l'article "{{ post.postTitle }}"</h2>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              {{ form_start(form) }}
                <div class="card-body">
                    {{form_row(form.postTitle)}}
                    {{form_row(form.postContent)}}
                    {{form_row(form.categories)}}
                    {{form_row(form.metaKey)}}
                    {{form_row(form.postUrl)}}
                    {{form_row(form.metaDescription)}}
                    {{form_row(form.imageFile)}}
                    <ul id="product-images-fields-list"
                        data-prototype="{{ form_widget(form.postImages.vars.prototype)|e }}"
                        data-widget-tags="{{ '<li></li>'|e }}"
                        data-widget-counter="{{ form.postImages|length }}"
                    >
                        {% for key,productImageForm in form.postImages %}
                            {{ form_widget(productImageForm) }}
                        {% endfor %}
                    </ul>
                    <button type="button"
                            class="add-another-collection-widget"
                            data-list-selector="#product-images-fields-list">Ajouter une autre image</button>
                    {{form_row(form.videoFile)}}
                    {{form_row(form.isApprouved)}}
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                  <button type="submit" class="btn btn-danger">Modifier</button>
                </div>
              {{form_end(form)}}
            </div>
                
              
           </div>
         </div>      
      </div>
    </section>
 
  </div>
{{ include('admin/layout/footer.html.twig') }}  

</body>
</html>
